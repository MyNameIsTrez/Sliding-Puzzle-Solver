	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/code/python/main.py",
			"console": "integratedTerminal"
		},
		{
			"name": "C++",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/puzzle",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"setupCommands": [
			  {
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			  }
			],
			"preLaunchTask": "C++ build",
			"internalConsoleOptions": "neverOpen"
		},
	]
}
